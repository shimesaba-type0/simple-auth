# アプリケーション設定
APP_NAME=SimpleAuth
DEBUG=True
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=INFO

# データベース設定
DATABASE_URL=sqlite:///instance/simple_auth.db

# セキュリティ設定
# openssl rand -hex 32
# この出力で十分安全なキーが作れる
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440  # 24時間

# Argon2idハッシュ設定
ARGON2_TIME_COST=2
ARGON2_MEMORY_COST=102400  # 100 MB
ARGON2_PARALLELISM=8
ARGON2_HASH_LENGTH=32
ARGON2_SALT_LENGTH=16

# Fail Lock設定
FAIL_LOCK_ATTEMPTS=5
FAIL_LOCK_WINDOW=30  # 分
FAIL_LOCK_DURATION=120  # 分

# パスフレーズ設定
MIN_PASSPHRASE_LENGTH=32
DEFAULT_PASSPHRASE_LENGTH=64
MAX_PASSPHRASE_LENGTH=128

# セッション設定
SESSION_TIMEOUT=24  # 時間

